<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="v_option_group_new" pattern="/option-group/new">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:new</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    <route id="v_option_group_list" pattern="/option-groups/">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:list</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="v_option_group_show" pattern="/option-group/{id}">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:show</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="v_option_group_edit" pattern="/option-group/{id}/edit">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:edit</default>
        <requirement key="_method">GET|POST</requirement>
    </route>
    <route id="v_option_group_clone" pattern="/option-group/{id}/clone">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:clone</default>
        <requirement key="_method">GET</requirement>
    </route>
    <route id="v_option_group_delete" pattern="/option-group/{id}/delete">
        <default key="_controller">VespolinaCommerceBundle:OptionGroup:delete</default>
        <requirement key="_method">GET</requirement>
    </route>
</routes>
