<div class="row">
    <div class="col-md-12">
        <div class="row">
            {% for product in productsPager %}
            <div class="col-md-4 v-product-tile">
                <div class="thumbnail">
                    <a href="{{ path('v_product_detail', { 'slug': product.slug }) }}">
                        {% include 'VespolinaCommerceBundle:Default:_product_primary_media.html.twig' with {'product': product } %}
                    </a>
                    <div class="caption">
                        <h4 class="v-product-name">
                            <a href="{{ path('v_product_detail', { 'slug': product.slug }) }}">
                                {{ product.name }}
                            </a>
                        </h4>
                        <p class="v-product-price">
                            {% include 'VespolinaCommerceBundle:Default:_product_prices.html.twig' with {'product': product } %}
                        </p>
                        <div class="v-product-description">
                            <p>
                                <a class="btn btn-primary" href="{{ path('v_cart_add_product', {'productId': product.id}) }}">Add to Cart</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
                {% if loop.index is divisibleby (3) %}
        </div>
        <div class="row">
                {% endif %}
            {% else %}
            No products loaded.
            {% endfor %}
        </div>
        <div class="row">
            <div class="navigation pagerfanta">
                {# {{ pagerfanta(productsPager) }} #}
            </div>
        </div>
    </div>
</div>
