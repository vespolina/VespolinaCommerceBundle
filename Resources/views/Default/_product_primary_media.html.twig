{% if type is not defined %}
    {% set type = 'thumbnail' %}
{% endif %}

{% if assetManager().hasType(product, type) %}
    <img class="v-media-item" src="{{ asset( assetManager().getType(product, type).getFileName() ) }}"/>
{%  else %}
    <img class="thumbs" src="{{ asset('bundles/vespolinadefaultstore/images/no-product-image.jpg') }}"/>
{%  endif %}
