{% extends vespolina_layout_template %}

{% block navigation %}
<ul class="breadcrumb">
    <li><a href="{{ path('v_store_home') }}">Home</a> <span class="divider">/</span></li>
    <li>Checkout<span class="divider">/</span></li>
</ul>
{% endblock %}

{% block content %}

{% render "VespolinaCommerceBundle:Process/Process:processNavigator" with {'currentProcessStep': currentProcessStep } %}

<div class="row-fluid">
    <div class="span12">
        <h3>Please select payment method</h3>

        <form action="{{ path('v_checkout_process_step', { 'processId': currentProcessStep.process.id, 'processStepName': currentProcessStep.name })}}" method="post" {{ form_enctype(selectPaymentMethodForm) }}>
            {{ form_widget(selectPaymentMethodForm) }}
            <input type="submit" class="btn" />
        </form>
    </div>
</div>
{% endblock %}

