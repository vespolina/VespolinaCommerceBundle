{% extends vespolina_layout_template %}

{% block navigation %}
<ul class="breadcrumb">
    <li><a href="{{ path('v_store_home') }}">Home</a></li>
    <li>Checkout</li>
</ul>
{% endblock %}

{% block content %}

{% render(controller('VespolinaCommerceBundle:Process/Process:processNavigator', {'currentProcessStep': currentProcessStep })) %}

<div class="row-fluid">
    <div class="span12">
        <h3>Please select how you want your items to be shipped</h3>

        <form action="{{ path('v_checkout_process_step', { 'processId': currentProcessStep.process.id, 'processStepName': currentProcessStep.name })}}" method="post" {{ form_enctype(selectPaymentMethodForm) }}>
            {{ form_widget(selectPaymentMethodForm) }}
            <input type="submit" class="btn" />
        </form>
    </div>
</div>
{% endblock %}

