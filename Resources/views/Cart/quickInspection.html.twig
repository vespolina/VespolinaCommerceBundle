{% if cart.isEmpty %}
    <li><a href="#">Cart is empty</a></li>
{% else %}
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            Cart {{ cart.items.count }} item(s) <b class="caret"></b>
        </a>
        <ul class="dropdown-menu">
            {#<li>{{ totalPrice | price_format(store.defaultCurrency) }}</li>#}
            <li>
                <a href="{{ path('v_cart_show') }}">Show Cart</a>
            </li>
            <li>
                <a href="{{ path('v_cart_checkout') }}">Checkout</a>
            </li>
        </ul>
    </li>
{% endif %}