{% extends vespolina_layout_template %}

{% block content %}
<h2>My Cart</h2>
<table class="table table-striped">
    <thead>
    <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>&nbsp;</th>
    </tr>
    </thead>
    <tbody>
    <form action="{{ path('v_cart_update', { cartId: cart.id })}}" method="POST" {{ form_enctype(form)}}>
        {% for item in form.items %}
            <tr>
                <td>{{ item.vars.value.name }}</td>
                <td>
                    {{ form_widget(item.quantity, { 'attr': { 'class': 'span1'}}) }}
                    {{ form_widget(item.product.id) }}
                </td>
                <td>{{ price(item.vars.value,'totalPrice')}} </td>
                <td><a href="{{ path('v_cart_remove_product', {'productId': item.vars.value.product.id}) }}"><i class="icon-trash"></i></a></td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Your cart is empty.</td>
            </tr>
        {% endfor %}

        <tr>
            <td></td>
            <td></td>
            <td></td>
            <td><button class="btn btn-primary">Update Cart</button></td>
        </tr>
        {{ form_rest(form) }}
    </form>

    </tbody>
</table>

<div class="well span3 offset6">
    <p align="center">
        <strong>Grand Total</strong> {{ price(cart,'totalPrice') }}<br/>
        {% if cart.getAttribute('taxation_enabled') == true %}
            Tax {{ price(cart, 'totalTax') }}<br/>
        {% endif %}
        <br/>
        <a href="{{ path('v_cart_checkout')}}" class="btn btn-success">
            <i class="icon-shopping-cart icon-white"></i>
            Checkout
        </a>
    </p>
</div>
{% endblock %}